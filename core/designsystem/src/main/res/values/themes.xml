        <item name="android:statusBarColor">@color/White_01</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.SplashScreen.ShyPolarBear" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_mark</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ShyPolarBear</item>
    </style>
</resources>