<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White_01"
                app:layout_scrollFlags="scroll|enterAlways">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/feed_toolbar_title"
                        style="@style/H3"
                        android:layout_width="wrap_content"
                        android:layout_height="32sp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="@string/feed_title"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/feed_toolbar_notification"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="60dp"
                        android:src="@drawable/ic_feed_toolbar_notification"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/feed_toolbar_title" />

                    <ImageView
                        android:id="@+id/feed_toolbar_sort"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_menu_option"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/feed_toolbar_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White_01">

                <ImageView
                    android:id="@+id/feed_post_user_profile_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/ic_user_base_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/feed_post_user_nickname"
                    style="@style/H5"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/test_nickname"
                    app:layout_constraintStart_toEndOf="@id/feed_post_user_profile_img"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/feed_post_posting_time"
                    style="@style/l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/test_posting_time"
                    android:textColor="@color/Gray_05"
                    app:layout_constraintStart_toEndOf="@id/feed_post_user_profile_img"
                    app:layout_constraintTop_toBottomOf="@id/feed_post_user_nickname" />

                <ImageView
                    android:id="@+id/feed_post_property"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_menu_option"
                    android:tint="@color/Gray_05"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UseAppTint" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/feed_post_viewpager_img"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/feed_post_posting_time" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/feed_post_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feed_post_viewpager_img"
                    app:tabBackground="@drawable/selector_feed_post_indicator"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/feed_post_like_btn"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_btn_like"
                    app:layout_constraintTop_toBottomOf="@id/feed_post_viewpager_img"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="22dp"/>

                <TextView
                    android:id="@+id/feed_post_like_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feed_post_like"
                    style="@style/l3"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@id/feed_post_like_btn"
                    app:layout_constraintStart_toEndOf="@id/feed_post_like_btn"/>

                <TextView
                    android:id="@+id/feed_post_like_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32"
                    style="@style/l3"
                    app:layout_constraintTop_toTopOf="@id/feed_post_like_btn"
                    app:layout_constraintStart_toEndOf="@id/feed_post_like_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feed_post_cnt"
                    style="@style/l3"
                    app:layout_constraintTop_toTopOf="@id/feed_post_like_btn"
                    app:layout_constraintStart_toEndOf="@id/feed_post_like_cnt"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>